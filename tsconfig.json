{
    "compilerOptions": {
        "module": "es6",
        "lib": ["ES7"],
        "noImplicitAny": true,
        "moduleResolution": "node",
        "removeComments": true,
        "preserveConstEnums": true,
        // "outFile": "../../built/local/tsc.js",
        "sourceMap": true,
        "jsx": "react",
        "typeRoots": [ "./types", "./node_modules/@types"],
        "resolveJsonModule": true,
        "esModuleInterop": true  
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}